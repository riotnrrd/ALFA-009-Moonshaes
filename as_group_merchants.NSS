// Created by Riotnrrd for ALFA 4/2012
// 2d4 1st level warriors plus 1d2 3rd level npcs
void main() {
	int nWarriors = d4(2);
	int nLeaders = d2();
	int i;
	
	for (i = 0; i < nWarriors; i++) SetFirstName(ACR_SpawnObject("abr_cr_npc_war_1", OBJECT_TYPE_CREATURE), "Merchant Guard");
	for (i = 0; i < nLeaders; i++) {
		int n = d100();
		if (n < 20)	SetFirstName(ACR_SpawnObject("abr_cr_npc_brb_3", OBJECT_TYPE_CREATURE), "Merchant");
		else if (n < 40) SetFirstName(ACR_SpawnObject("abr_cr_npc_clr_3", OBJECT_TYPE_CREATURE), "Merchant");
		else if (n < 60) SetFirstName(ACR_SpawnObject("abr_cr_npc_ftr_3", OBJECT_TYPE_CREATURE), "Merchant");
		else if (n < 80) SetFirstName(ACR_SpawnObject("abr_cr_npc_rog_3", OBJECT_TYPE_CREATURE), "Merchant");
		else SetFirstName(ACR_SpawnObject("abr_cr_npc_wiz_3", OBJECT_TYPE_CREATURE), "Merchant");
	}
}